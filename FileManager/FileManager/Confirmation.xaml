<Window x:Class="FileManager.Confirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager"
        mc:Ignorable="d"
        Title="Confirmation" Height="152" Width="280">
    <Grid>
        <Button x:Name="b_yes" Content="Yes" HorizontalAlignment="Left" Margin="30,80,0,0" Width="80" Height="30" VerticalAlignment="Top"/>
        <Button x:Name="b_no" Content="No" HorizontalAlignment="Left" Margin="180,80,0,0" Width="80" Height="30" VerticalAlignment="Top"/>
        <Label Content="Сonfirm action" HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
